{
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "globals": {
        "angular": true
    },
    "rules": {
        "camelcase": 2,
        "curly": 2,
        "brace-style": [2, "1tbs"],
        "quotes": [0, "single"],
        "semi": [2, "always"],
        "linebreak-style": [2, "unix"]
    },
    "plugins": [
        "react"
    ]   
}