{
  // 使用ECMAScript 6语法
  "esversion": 6,

  // 禁用位运算符，位运算符在 JavaScript 中使用较少，经常是把 && 错输成 &
  "bitwise": true,

  // 强制所有变量名称为使用驼峰风格或UPPER_CASE用下划线
  "camelcase": true,

  // 循环或者条件语句必须使用花括号包围
  "curly": true,

  // 设置为true,禁止使用这个选项 ==和 !=，强制使用 ===和 !==
  "eqeqeq": false,
  
  // 需要直接调用的函数必须被括号包围，如：（function（）{}（））
  "immed": true,

  // 禁止定义之前使用变量，设置为“nofunc”将允许函数声明被忽略
  "latedef": "nofunc",

  // 空代码块警告
  "noempty": true,

  // true-- 代码字符串禁止单引号双引号混用
  // "single"--只允许单引号
  // "double"--只允许双引号
  "quotmark": false,

  // 检查变量重复定义
  // "inner" 只检查是否在相同的作用域重复定义
  // "outer" 检查外部作用域
  // false 与inne一样
  // true 允许变量覆盖
  "shadow": "inner",

  // 变量未定义
  "undef": true,

  // 变量未使用
  "unused": false,

  /************* 宽松选项 *************/

  // 禁止缺少分号警告
  "asi": false,

  // 忽略debugger
  "debug": true,

  // 定义了全局变量,通常用于日志调试: console, alert等等
  "devel": true,

  // 禁止 == null比较。通常这样的比较有用,当你想检查一个变量是否null或 undefined
  "eqnull": false,

  // 禁止使用表达式
  "expr": true,

  // 检查一行代码最后声明后面的分号是否遗漏
  "lastsemic": true,

  // 禁止关于__proto__属性的警告
  "proto": true,

  // 检查[]使用，可以使用.代替[]
  "sub": true,

  /************** 环境变量 **************/

  // 暴露浏览器属性的全局变量，列如 window,document;
  // 注意:这个选项不暴露变量 alert或 console。
  "browser": true,

  // 这个选项定义全局变量使用时可用Browserify工具建立一个项目
  "browserify": true,

  // 这个选项定义全局暴露的jQuery库
  "jquery": true,

  /************** 指定没有正式定义的全局变量的白名单 **************/
  "globals": {
    "jQuery": true,
    "require": true,
    "JSON": true
  }
}